<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_style"
    tools:context=".Teacher_1">

    <EditText
        android:id="@+id/teacherEmailId"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/person"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_shape"
        android:hint=" E-Mail" />

    <EditText
        android:id="@+id/teacherPasswordId"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/lock"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edittext_shape"
        android:hint=" Password" />

    <Button
        android:id="@+id/teacherLoginButton"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/login_shape"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:textSize="17sp"
        android:id="@+id/teacher_1TextViewId"
        android:textColor="@android:color/black"
        android:text="Didn't have an account?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:id="@+id/teacher_1SignUpId"
        android:text="Sign up here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:id="@+id/loginProgressId"
        android:visibility="gone"/>

</LinearLayout>