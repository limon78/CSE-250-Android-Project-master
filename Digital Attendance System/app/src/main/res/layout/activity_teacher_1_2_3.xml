<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_style"
    tools:context=".Teacher_1_2_3">

    <TextView
        android:id="@+id/enterstudentRegId"
        android:text="Enter Student's Reg. Number:"
        android:textSize="23sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#edea39"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:background="@drawable/edittext_shape"
        android:id="@+id/teacher1_2_3_EditTextId"
        android:hint="   Reg. Number"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/teacher1_2_3SubmitId"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:background="@drawable/login_shape"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>